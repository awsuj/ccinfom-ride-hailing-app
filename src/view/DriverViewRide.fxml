    <top>
        <HBox alignment="TOP_CENTER" prefHeight="22.0" prefWidth="389.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="driverNameLabel" text="driverNameLabel" />
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="balanceLabel" text="balanceLabel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Assigned Ride">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" />
                    </padding>
                </Label>
                <TitledPane animated="false" text="Ride Details">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <GridPane prefHeight="148.0" prefWidth="421.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="196.0" minWidth="10.0" prefWidth="68.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="353.0" minWidth="10.0" prefWidth="332.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vLgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Pickup:" />
                                        <Label text="Dropoff:" GridPane.rowIndex="1" />
                                        <Label text="Passenger:" GridPane.rowIndex="2" />
                                        <Label text="Fare:" GridPane.rowIndex="3" />
                                        <Label text="Status:" GridPane.rowIndex="4" />
                                        <Label fx:id="pickupValue" text="pickupValue" GridPane.columnIndex="1" />
                                        <Label fx:id="dropoffValue" text="dropoffValue" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label fx:id="passengerNameValue" text="passengerNameValue" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label fx:id="fareValue" text="fareValue" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Label fx:id="statusValue" text="statusValue" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </children>
                                </GridPane>
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
                <!-- Added onAction -->
                <Button fx:id="dropoffButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDropoffClicked" text="Dropoff Passenger" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </center>
