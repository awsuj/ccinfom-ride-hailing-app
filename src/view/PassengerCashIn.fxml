<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.src.controllers.PassengerController">
    <top>
        <HBox alignment="TOP_CENTER" prefHeight="22.0" prefWidth="389.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="passengerNameLabel" text="passengerNameLabel" />
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="balanceLabel" text="balanceLabel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Cash In Wallet">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label text="Enter amount to add:" />
                <TextField fx:id="cashInAmountField" maxWidth="200.0" promptText="0.00" />
                <Button fx:id="confirmCashInButton" mnemonicParsing="false" onAction="#onConfirmCashInClicked" text="Confirm Cash In" />
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackToMenuClicked" text="Back" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>