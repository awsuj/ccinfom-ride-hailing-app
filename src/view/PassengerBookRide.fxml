<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox fx:id="bookRidePane" alignment="CENTER" prefHeight="103.0" prefWidth="520.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Book a Ride">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="pickupField" promptText="Pickup Location" />
                <TextField fx:id="dropoffField" layoutX="20.0" layoutY="124.0" promptText="Dropoff Location" />
                <Button fx:id="requestRideButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Request Ride" />
                <Button fx:id="backButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Back" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <top>
        <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="520.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="passengerNameLabel" text="passengerNameLabel" />
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="balanceLabel" text="balanceLabel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
</BorderPane>
