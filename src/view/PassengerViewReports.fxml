<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="463.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.src.controllers.PassengerController">
    <top>
        <HBox alignment="TOP_CENTER" prefHeight="22.0" prefWidth="389.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="passengerNameLabel" text="passengerNameLabel" />
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="balanceLabel" text="balanceLabel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Passenger Reports">
                    <padding>
                        <Insets bottom="5.0" />
                    </padding>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
                    <children>
                        <Label fx:id="avgExpenditureLabel" text="Average Expenditure/Month: P0.00">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Label>
                        <Label fx:id="avgRidesLabel" text="Average Rides/Month: 0">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Label>
                        <Label fx:id="completionRateLabel" text="Completion Rate: 0%">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>

                <BarChart fx:id="expenditureChart" title="Monthly Expenditure">
                    <xAxis>
                        <CategoryAxis label="Month" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Expenditure" side="LEFT" />
                    </yAxis>
                </BarChart>
                <Button fx:id="backButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onBackToMenuClicked" text="Back" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>