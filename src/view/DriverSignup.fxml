<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="420.0" prefWidth="463.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.src.controllers.DriverController">
    <top>
        <HBox alignment="TOP_CENTER" prefHeight="22.0" prefWidth="389.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Create Driver Account" />
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClicked" text="Back" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="463.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Driver Sign Up">
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <GridPane prefHeight="267.0" prefWidth="423.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="201.51010131835938" minWidth="10.0" prefWidth="117.5" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="384.6660614013672" minWidth="10.0" prefWidth="306.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                        <RowConstraints maxHeight="30.0" minHeight="26.0" prefHeight="30.0" />
                    </rowConstraints>
                    <children>
                        <Label text="Full Name:" />
                        <TextField fx:id="nameField" promptText="Enter Full Name" GridPane.columnIndex="1" />

                        <Label text="Gender:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="genderCombo" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Select Gender" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Age:" GridPane.rowIndex="2" />
                        <TextField fx:id="ageField" promptText="Enter Age" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Phone Number:" GridPane.rowIndex="3" />
                        <TextField fx:id="phoneField" promptText="Enter Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Email:" GridPane.rowIndex="4" />
                        <TextField fx:id="emailField" promptText="Enter Email" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="License Number:" GridPane.rowIndex="5" />
                        <TextField fx:id="licenseField" promptText="Enter License Number" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>
                <PasswordField fx:id="passwordField" promptText="Enter Password" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
                <Button fx:id="signupButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSignupClicked" text="Sign Up" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>